  </div>
  <div class="box1">
   
        <div class="box2">
            <h4 style="padding-top: 10.5px;">List Of Placed Student</h4>
        </div>
        
    
    <hr>
    <form action="/placed_student" method="post" type="text/plain">
        
        <select id="year" name="year" style="margin-left: 4%;margin-top: 4%;">
            <option value="2021">2021</option>
            <option value="2022">2022</option>
            <option value="2023">2023</option>
        </select>
        <br>
        <input type="submit" value="Filter by Year" style="margin-top:2%; margin-left: 5.95%; height:31px;width:250px;color:white;background-color: #55a2ee;border: 0px;border-radius: 3px;">
    </form>
    <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
        <thead>
            <tr style="background-color: #f2f2f2;">
                <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Branch</th>
                <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Degree</th>
                <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Name</th>
                <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Company Name</th>
                <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Gyan Review</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((item) => { %>
                <tr>
                    <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;"><%= item.branch %></td>
                    <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;"><%= item.course %></td>
                    <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;"><%= item.student_name %></td>
                    <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;"><%= item.company_name %></td>
                    <form action="/placementgyan?email=<%= item.email%>" method="post">
                <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd; "><button class="button-7" role="button">Gyan Review</button></td>  
                    </form>
                    
                </tr>
            <% }); %>
        </tbody>
    </table>
    <div class="pagination">
        <% if (page > 1) { %>
          <a href="/placed_student?page=<%= page - 1 %>" ><button class="button-8" role="button" >previous</button></a>
        <% } %>
        <a href="/placed_student?page=<%= page + 1 %>"><button class="button-8" role="button" >Next</button></a>
      </div>
  </div>
  
</body>
</html>