    <div class="mainbody">
        <h3 style="color:blue;padding-left: 21px;">List of Company</h3>
        <form action="/companybyname" method="post">
            <input placeholder="Search Company By Name" style="margin-left: 2%; height:35px ;width:75%" Name="company_name">
            <button class="button-7" role="button">Search</button>
        </form>
        
        <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
            <thead>
                <tr style="background-color: #f2f2f2;">
                    <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Company Type</th>
                    <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Company Name</th>
                    <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Action</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((item) => { %>
                    <tr>
                        <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;"><%= item.company_type %></td>
                        <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;"><%= item.company_name %></td>
                        <form action="/company_info?name=<%=item.company_name%>" method="post">
                    <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd; "><button class="button-7" role="button">Glance</button></td>  
                        </form>
                        
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <div class="pagination">
            <% if (page > 1) { %>
              <a href="/login?page=<%= page - 1 %>"><button class="button-8" role="button">previous</button></a>
            <% } %>
            <a href="/login?page=<%= page + 1 %>"><button class="button-8" role="button">Next</button></a>
          </div>
    
    </div>
    
