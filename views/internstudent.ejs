      <a href="/change_password" style="text-decoration: none; font-size: large;">Change Password</a>
      &nbsp;
      &nbsp;
      &nbsp;
      <a href="/logout" style="text-decoration: none; font-size: large;">Logout</a>   
</div>
  
  <div class="mainbody">
      <h3 style="color:blue;padding-left: 21px;">List of Student</h3>
      <% if(data.length > 0) { %>
      <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
          <thead>
              <tr style="background-color: #f2f2f2;">
                  <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Name</th>
                  <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Category</th>
                  <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Company Name</th>
                  <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Year</th>
                  <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Branch</th>
                  <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">View</th>
              </tr>
          </thead>
         
          <tbody>
              
              <% data.forEach((item) => { %>
                  <tr>
                      <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;"><%= item.student_name %></td>
                      <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;"><%= item.placed_category %></td>
                      <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;"><%= item.company_name %></td>
                      <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;"><%= item.placed_year %></td>
                      <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;"><%= item.branch %></td>

                      <form action="/getinternship?email=<%= item.email%>&company_name=<%=item.company_name%>" method="post">
                  <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd; "><button class="button-7" role="button">gyan review</button></td>  
                      </form>
                      
                  </tr>
              <% }); %>
              
          </tbody>
         
      </table>
     
      <%}else{%>
          <!-- <div class="box2"> -->
              <h4 style="padding-left:20px">No student got intern in this company</h4>
          <!-- </div> -->
          
          <%}%>
  </div>
  </body>
</html>
